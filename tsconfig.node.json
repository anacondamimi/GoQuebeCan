{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "outDir": "dist",
    "types": ["node"],
    "declaration": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "noEmit": false,
    "composite": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo"
  },
  "include": ["scripts/**/*"]
}
