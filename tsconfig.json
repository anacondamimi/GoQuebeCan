{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["DOM", "DOM.Iterable", "ESnext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    // üîÅ Alias @/ vers /src
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    // ‚úÖ Types globaux (Node, Next, etc.)
    "types": ["node", "next"],
    "typeRoots": ["./types", "./node_modules/@types"],
    // üßº Clean code
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "src",
    "scripts",
    "**/*.ts",
    "**/*.tsx",
    "find-img-tags.js",
    "next.config.mjs",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", ".next"]
}
