{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["DOM", "DOM.Iterable", "ESnext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/app/*": ["app/*"],
      "@/utils/itineraryStorage.client": ["src/utils/itineraryStorage.client"]
    },
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },

  "include": [
    "next-env.d.ts",
    "src",
    "scripts",
    "**/*.ts",
    "**/*.tsx",
    "find-img-tags.js",
    "next.config.mjs",
    ".next/types/**/*.ts"
  ],

  "exclude": ["node_modules", ".next"],

  "typeRoots": ["./types", "./node_modules/@types"],

  "types": ["node", "next"]
}
